{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "mocks/**/*"],
  "exclude": ["**/__tests__/*", "**/*.spec.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mocks/*": ["./mocks/*"],
      "@configuration/*": ["./configuration/*"]
    },
    "types": ["node"]
  }
}
